<UserControl
    x:Class="SocketDebugger.Dialogs.ConfigDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:SocketDebugger.ViewModels"
    Width="400"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:ConfigDialogViewModel}"
    Background="White"
    mc:Ignorable="d">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="备注"
                    FontSize="16" />

                <TextBox
                    Grid.Column="1"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    Text="{Binding ConfigModel.ConnectionTitle}" />
            </Grid>

            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="类型"
                    FontSize="16" />

                <Label
                    Grid.Column="1"
                    Margin="-3,0,0,0"
                    Content="{Binding ConfigModel.ConnectionType}"
                    FontSize="16" />
            </Grid>

            <Grid Grid.Row="2" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="主机地址"
                    FontSize="16" />

                <TextBox
                    Grid.Column="1"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    Text="{Binding ConfigModel.ConnectionHost}" />
            </Grid>

            <Grid Grid.Row="3" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="端口"
                    FontSize="16" />

                <TextBox
                    Grid.Column="1"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    Text="{Binding ConfigModel.ConnectionPort}" />
            </Grid>

            <Grid Grid.Row="4" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="数据类型"
                    FontSize="16" />

                <ComboBox
                    x:Name="DataTypeComboBox"
                    Grid.Column="1"
                    FontSize="16"
                    ItemsSource="{Binding DataTypeArray}"
                    SelectedItem="{Binding ConfigModel.MessageType}">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="SelectionChanged">
                            <b:InvokeCommandAction Command="{Binding DataTypeSelectedCommand}" CommandParameter="{Binding ElementName=DataTypeComboBox}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </ComboBox>
            </Grid>

            <Grid Grid.Row="5" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="重复发送"
                    FontSize="16" />

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        FontSize="16"
                        IsEnabled="{Binding ElementName=RepeatSendCheckBox, Path=IsChecked}"
                        Text="{Binding ConfigModel.Message}" />

                    <CheckBox
                        x:Name="RepeatSendCheckBox"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Center"
                        FontSize="16"
                        IsChecked="{Binding IsRepeatBoxChecked}" />
                </Grid>
            </Grid>

            <Grid Grid.Row="6" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="间隔"
                    FontSize="16" />

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        FontSize="16"
                        IsEnabled="{Binding ElementName=RepeatSendCheckBox, Path=IsChecked}"
                        Text="{Binding ConfigModel.TimePeriod}" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="ms" />
                </Grid>
            </Grid>
        </Grid>

        <Button
            Grid.Row="1"
            Width="200"
            Margin="20"
            Command="{Binding SaveConfigCommand}"
            Content="保存配置"
            Foreground="White" />
    </Grid>
</UserControl>