<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="clr-namespace:SocketDebugger.Model">
    <DataTemplate x:Key="ClientSendDataTemplateKey" DataType="{x:Type model:ChatMessageModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox
                x:Name="MessageTextView"
                Grid.Row="0"
                Width="400"
                Padding="10"
                HorizontalAlignment="Right"
                Background="#E5E5E5"
                BorderThickness="0"
                FontSize="14"
                IsReadOnly="True"
                Text="{Binding Message}"
                TextWrapping="Wrap" />

            <TextBlock
                Grid.Row="1"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                FontSize="12"
                Text="{Binding MessageTime}" />
        </Grid>

        <DataTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="MessageTextView" Property="Background" Value="#4CAF50" />
                <Setter TargetName="MessageTextView" Property="TextBlock.Foreground" Value="White" />
            </Trigger>
        </DataTemplate.Triggers>
    </DataTemplate>

    <DataTemplate x:Key="ClientReceiveDataTemplateKey" DataType="{x:Type model:ChatMessageModel}">
        <Grid HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox
                x:Name="MessageTextView"
                Grid.Row="0"
                Width="400"
                Padding="10"
                Background="#E5E5E5"
                BorderThickness="0"
                FontSize="14"
                IsReadOnly="True"
                Text="{Binding Message}"
                TextWrapping="Wrap" />

            <TextBlock
                Grid.Row="1"
                Margin="10,0,00,0"
                FontSize="12"
                Text="{Binding MessageTime}" />
        </Grid>

        <DataTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="MessageTextView" Property="Background" Value="#4CAF50" />
                <Setter TargetName="MessageTextView" Property="TextBlock.Foreground" Value="White" />
            </Trigger>
        </DataTemplate.Triggers>
    </DataTemplate>
</ResourceDictionary>